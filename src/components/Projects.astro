---
import { projects } from "@utils/Projects";

import Tag from "./Tag.astro";
import ProjectImg from "./ProjectImg.astro";
---

<section class="container">
  <div class="mb-6 text-2xl font-bold">
    <span
      class="bg-gradient-to-br from-sky-500 to-cyan-400 bg-clip-text text-transparent"
    >
      Recent
    </span>
    <span>projects</span>
  </div>

  <div class="flex flex-col gap-6">
    {
      projects.map((project) => (
        <div class="flex flex-col items-center gap-8 rounded-md bg-slate-800 p-3 md:flex-row md:mb-auto">
          <div class="flex justify-center items-center">
            <ProjectImg project={project} />
          </div>
          <div>
            <div class="flex flex-col items-center gap-y-2 md:flex-row">
              <div class="flex gap-1 items-center">
                <a
                  href={project.url}
                  target="_blank"
                  class="hover:text-cyan-400"
                >
                  <h2 class="text-xl font-semibold">{project.name}</h2>
                </a>
                {project.sourceUrl && (
                  <a
                    href={project.sourceUrl}
                    target="_blank"
                    class="hover:text-gray-500"
                  >
                    <h2 class="text-sm font-semibold text-gray-400">
                      [source code]
                    </h2>
                  </a>
                )}
              </div>
              <div class="ml-3 flex flex-wrap md:justify-start justify-center gap-2">
                {project.tags.map((tag) => (
                  <Tag text={tag} />
                ))}
              </div>
            </div>
            <div class="mt-3 text-gray-400">{project.description}</div>
          </div>
        </div>
      ))
    }
  </div>
</section>
