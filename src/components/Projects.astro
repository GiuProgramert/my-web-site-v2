---
import { projects } from "../utils/Projects";
import Tag from "./Tag.astro";
---

<section class="container">
  <div class="mb-6 text-2xl font-bold">
    <span
      class="bg-gradient-to-br from-sky-500 to-cyan-400 bg-clip-text text-transparent"
    >
      Proyectos</span
    > recientes
  </div>

  <div class="flex flex-col gap-6">
    {
      projects.map((project) => (
        <div class="flex flex-col items-center gap-x-8 rounded-md bg-slate-800 p-3 md:flex-row">
          <div>{/* Add image */}</div>
          <div>
            <div class="flex flex-col items-center gap-y-2 md:flex-row">
              <a href={project.url} target="_blank" class="hover:text-cyan-400">
                <h2 class="text-xl font-semibold">{project.name}</h2>
              </a>
              <div class="ml-3 flex gap-2">
                {project.tags.map((tag) => (
                  <Tag text={tag} />
                ))}
              </div>
            </div>
            <div class="mt-3 text-gray-400">{project.description}</div>
          </div>
        </div>
      ))
    }
  </div>
</section>
